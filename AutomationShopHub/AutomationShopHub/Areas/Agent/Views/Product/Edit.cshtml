@model ProductFormModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Product";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row">
   <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
      <form method="post">
         <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Title...">
            <span asp-validation-for="Name" class="small text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" placeholder="Address...">
            <span asp-validation-for="Description" class="small text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                   <option value="@category.Id">@category.Name</option>
                    }
            </select>
            <span asp-validation-for="CategoryId" class="small text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="BrandId"></label>
            <select asp-for="BrandId" class="form-control">
                    @foreach (var category in Model.Brands)
                    {
                   <option value="@category.Id">@category.Name</option>
                    }
            </select>
            <span asp-validation-for="BrandId" class="small text-danger"></span>
         </div>
         <div class="text-center">
            <input class="btn btn-primary mt-3" type="submit"  value="Proceed" />
         </div>
      </form>
   </div>
</div>
