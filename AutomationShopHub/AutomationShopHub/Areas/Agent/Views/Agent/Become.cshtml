@using AutomationShopHub.Core.Models

@model BecomeSalesAgentModel

@{
    ViewBag.Title = "Become Agent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post" asp-area="Agent" asp-controller="Agent" asp-action="Become">
            <div class="form-group">
                <label asp-for="@Model.TelephoneNumber"></label>
                <input asp-for="@Model.TelephoneNumber" class="form-control" placeholder="+359888888888">
                <span asp-validation-for="@Model.TelephoneNumber" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3 " type="submit" value="Ok, become!" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}