@using AutomationShopHub.Core.Models

@model BecomeClientModel

@{
    ViewBag.Title = "Become Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData.ModelState["Error"].Errors.First().ErrorMessage
    </div>
}

<div class="row">
   <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
      <form method="post" asp-area="" asp-controller="Client" asp-action="Become">
         <div class="form-group">
            <label asp-for="@Model.TelephoneNumber"></label>
            <input asp-for="@Model.TelephoneNumber" class="form-control" placeholder="+359888888888">
            <span asp-validation-for="@Model.TelephoneNumber" class="small text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="@Model.DeliveryAddress"></label>
            <input asp-for="@Model.DeliveryAddress" class="form-control" placeholder="blv.'Hristo Botev' 30">
            <span asp-validation-for="@Model.DeliveryAddress" class="small text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="@Model.ImageProfileUrl"></label>
            <input asp-for="@Model.ImageProfileUrl" class="form-control" placeholder="Image Url">
            <span asp-validation-for="@Model.ImageProfileUrl" class="small text-danger"></span>
         </div>
         <div class="text-center">
            <input class="btn btn-primary mt-3 " type="submit" value="Ok, become!" />
         </div>
      </form>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}