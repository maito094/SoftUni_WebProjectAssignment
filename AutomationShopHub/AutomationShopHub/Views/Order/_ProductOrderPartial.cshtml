@using AutomationShopHub.Core.Models;
@model ProductOrderModel


<div style="padding:20px 20px 20px 20px" class="card mb-3 col-md-4 mt-5" >
   <div class="card-body">
      <div class="d-flex justify-content-between">
         <div class="d-flex flex-row align-items-center">
            <div>
               <img src="@Model.ProductType.ImageUrl"
                    class="img-fluid rounded-3" alt="Shopping item" style="width: 65px;">
            </div>
            <div class="ms-3">
               <h5 style="width: 150px">@Model.Name</h5>
            </div>
            <p class="card-text small ms-3 mb-1" style="width: 500px">@Model.ProductType.Description</p>
         </div>
         <div class="ms-3" style="align-items:end; justify-content:end">
            <form class="ml-2" asp-controller="Order" asp-action="Remove" asp-route-id="@Model.Id" method="post">
               <input class="btn btn-danger" type="submit" value="Remove Order" />
            </form>
            <p></p>
         </div>
      </div>

      <div class="d-flex flex-row align-items-lg-stretch justify-content-between">
         <div style="width: auto;justify-content:flex-start">
            <h5 class="fw-normal mb-0">@Model.CategoryName : @Model.ProductType.ModelReference</h5>
         </div>
         <div style="width: auto;justify-content:flex-end">
            <h5 class="mb-0">Price: @Model.ProductType.Price BGN</h5>
         </div>

      </div>
   </div>
</div>