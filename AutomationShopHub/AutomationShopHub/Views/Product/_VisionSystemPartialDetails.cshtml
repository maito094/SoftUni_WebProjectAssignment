@model VisionSystemModel

<div class="card col-8 border-0">
   <a href="@Model.DatasheetUrl"><u>Datasheet</u></a>
   <p></p>
   <p style="font-size:20px;"> Guarantee Period: <b>@Model.GuaranteePeriod</b> months</p>
   <p style="font-size:20px;"> <b>@(@Model.hasBuiltInController ? "Built-In Controller" : "External Controller")</b></p>
   <p style="font-size:20px;"> <b>@(@Model.hasBuiltInLens ? "Lens are Built-In" : "Interchangeable Lens")</b></p>
   <p style="font-size:20px;"> <b>@(@Model.hasBuiltInLight ? "Has Built-In Light" : "External Light source")</b></p>
   <div>
      <p style="font-size:20px;">Industrial Communication Protocol: <b>@Model.Protocol.Name</b></p>
      <p style="font-size:20px;">Communication Description: </p>
      <p>@Model.Protocol.Description</p>
   </div>
</div>